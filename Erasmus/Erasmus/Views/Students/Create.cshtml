    <div class="form-group">
        @Html.LabelFor(model => model.SlikaDatoteka, "SlikaDatoteka", htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            <input class="btn btn-default" type="file" name="Image">
        </div>
    </div>
    <h5>Podaci o instituciji</h5>
    <div class="form-group">
        @Html.LabelFor(model => model.SveucilisteInstitucija, htmlAttributes: new { @class = "control-label col-md-2" })
