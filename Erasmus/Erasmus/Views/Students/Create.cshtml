            @Html.ValidationMessageFor(model => model.DatumRodenja, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group">
        @Html.LabelFor(model => model.Spol, htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            Muško: @Html.RadioButtonFor(m => m.Spol, "Muško")
            Žensko: @Html.RadioButtonFor(m => m.Spol, "Žensko")
        </div>
    </div>

    <div class="form-group">
        @Html.LabelFor(model => model.MjestoRodenja, htmlAttributes: new { @class = "control-label col-md-2" })
