@model Erasmus.Models.Student

@{
    /**/

    ViewBag.Title = "Novi student";
}

<h2>Unos</h2>


@using (Html.BeginForm("Create", "Students", FormMethod.Post, new { enctype = "multipart/form-data" }))
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        <h4>Student</h4>
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <h5>Podaci o studiju</h5>
        <div class="form-group">
            @Html.LabelFor(model => model.AkademskaGodina, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EnumDropDownListFor(model => model.AkademskaGodina, htmlAttributes: new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.AkademskaGodina, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.Semestar, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                Ljetni: @Html.RadioButtonFor(m => m.Semestar, "Ljetni")
                <br />
                Zimski: @Html.RadioButtonFor(m => m.Semestar, "Zimski")
            </div>
        </div>
    </div>


    <div class="form-group">
        @Html.LabelFor(model => model.StudijskiProgram, htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            Preddiplomski studij: @Html.RadioButtonFor(m => m.StudijskiProgram, "Preddiplomski studij")
            <br />
            Diplomski studij: @Html.RadioButtonFor(m => m.StudijskiProgram, "Diplomski studij")
        </div>
    </div>

    <div class="form-group">
        @Html.LabelFor(model => model.PodrucjeStudija, htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            @Html.EditorFor(model => model.PodrucjeStudija, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.PodrucjeStudija, "", new { @class = "text-danger" })
        </div>
    </div>
    <h5>Podaci o studentu</h5>
    <div class="form-group">
        @Html.LabelFor(model => model.PunoImeStudenta, htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            @Html.EditorFor(model => model.PunoImeStudenta, new { htmlAttributes = new { @class = "form-control" } })
